<h2>Rent</h2>

<%= simple_form_for [@instrument, @rental] do |f| %>
  <%= f.input :start_date, input_html: {id: "datetimepicker1"}, as: :string %>
  <%= f.input :end_date, input_html: { id: "datetimepicker2" }, as: :string  %>
  <%= f.button :submit %>
<% end %>


<% content_for(:after_js) do %>
<script type="text/javascript">

 $('#datetimepicker1').datetimepicker( {format: "DD/MM/YYYY", disabledDates: ["20/08/2017" ] } );
 $('#datetimepicker2').datetimepicker( {format: "DD/MM/YYYY" } );


</script>
<% end %>
