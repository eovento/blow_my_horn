<%= render "tabs" %>

<h3><%= @user.first_name %> has this instruments for rent:</h3>
<br>
<% @user.instruments.each do |instrument| %>

<div class="product">
  <div class='product-upvote'>
    <div class="product-arrow"></div>
    <div class='product-count'><%= instrument.id %></div>
  </div>
 <% if instrument.photo? %>
  <%= cl_image_tag instrument.photo.path, width: 200, height: 300, crop: :fill %>
<% end %>
  <div class='product-body'>
    <h3><%= instrument.title %></h3>
    <p><%= link_to "See more offers from #{@user.first_name}:", "list_user_instruments_path" %></p>
  </div>
  <ul class="list-inline product-controls hidden-sm hidden-xs">
    <li><a href=""><i class="fa fa-heart"></i></a></li>
    <li><a href=""><i class="fa fa-share"></i></a></li>
    <li><a href=""><i class="fa fa-star"></i></a></li>
  </ul>
</div>
<% end %>